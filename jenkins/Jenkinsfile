pipeline {
    agent any
    stages{
        stage('MVN_Steps'){
            steps{
                echo 'Running MVN Clean+Package...!!!!!'
                sh 'mvn clean package'
            }
        }
        stage('ListFiles'){
                    steps{
                        echo 'Files in directory...!!!!!'
                        sh 'pwd'
                        sh 'ls'
                    }
        }
        stage('DeployLocally'){
                    steps{
                        echo 'deploying locally!!'
                        sh 'nohup java -jar target/*.jar &'
                        sh 'sleep 20'
                    }
        }
    }
}