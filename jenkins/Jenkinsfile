pipeline {
    agent any
    stages{
        stage('MVN_Steps'){
            steps{
                echo 'Running MVN Clean+Package...!!!!!'
                sh 'mvn clean'
            }
        }
        stage('ListFiles'){
                    steps{
                        echo 'Files in directory...!!!!!'
                        sh 'pwd'
                        sh 'ls'
                        sh 'java -jar src/target/*.jar &'
                    }
        }
        stage('DeployLocally'){
                    steps{
                        echo 'deploying locally!!'
                        sh 'java -jar src/target/*.jar &'
                    }
        }
    }
}